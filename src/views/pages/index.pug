extends ../auth.layout.pug

block content
  .wrapper
    .welcome
      .welcome__btn
        button.welcome__btn-autoriz Авторизоваться

      .welcome__block

        .user
          .user__container
            .user__pic
              +image('content/user.jpg', 'user pic', 'user__pic-img')
            .user__info
              h1.user__name Ольга Егер
              .user__desc Личный сайт веб разработчика 
          .user__social
            +socials('block')


        nav.menu
          ul.menu__list
            each item in [['works.html','Мои работы'], ['about.html','Обо мне'], ['blog.html','Блог']]
              li.menu__item
                a.menu__link(href=`${item[0]}`) #{item[1]}
      .welcome__copyright
        .copyright.copyright_center 
          p &copy; Ольга Егер | Создано с любовью в LoftSchool | 2018
                