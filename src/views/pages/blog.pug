extends ../main.layout.pug

block variables
    - var title = 'Блог'

block scripts
    script(src='blog.bundle.js')

block content

    header.header.header--blog
        .header-container
            .header__socials

                +socials('header')

            .header__menu
                a(href="").hamburger
                    .hamburger__planks

            .header__content
      
                .header__user-desc.header__user-desc--blog
                    .user
                        .user__container
                            .user__pic
                                +image('content/me.jpg', 'user pic', 'user__pic-img')
                            .user__info.user__info--blog
                                +image('titles/blog_header.png', 'page title', 'title-img')
                                .user__info--container
                                    h2.subtitle.subtitle--blog блог
                                    h3.user__desc.user__desc--blog Статьи, которые я написала
    section.blog
        main.blog-container
            aside.blog-menu
                ul.blog-menu__list

                    each item in [`Самое важное в SASS`, `Приёмы в вёрстке, без которых не обходится ни одни сайт`, `Самый необходимый набор Gulp плагинов`, `Почему я выбрал Jade`]
                        li.blog-menu__item.blog-menu__item--active
                            a.blog-menu__btn #{item}
            .articles
