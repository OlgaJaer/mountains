header.header
    .header-container
        .header__socials

            +socials('header')
        //-ul.socials
            each social in ['vk', 'github', 'in']
            li.socials__item
             a(href="").socials__link
              +icon(social, "socials__icon")

        .header__menu
            a(href="").hamburger
                .hamburger__planks

        .header__content
            +image('titles/portfolio_header.png', 'page title', 'title-img')
      
            .header__user-desc
                .user
                    .user__container
                        .user__pic
                            +image('content/me-square.jpg', 'user pic', 'user__pic-img')
                        .user__info 
                            h2.user__name Ольга Егер
                            h3.user__desc Личный сайт веб разработчика 

        .header__btn
            button.arrow
                +icon('arrow_down', 'arrow__down')