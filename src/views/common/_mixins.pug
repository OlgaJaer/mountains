mixin icon(iconName, iconClass)
  svg(class=`${iconClass}`)
    use(xlink:href=`./assets/images/icons/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
  img(src=`/assets/images/${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)

mixin socials(mod, mod2)
 - var socials = [['https://vk.com/olga_volcano', "vk"],['https://github.com/OlgaJaer', "github"], ['http://in.com', 'in']]
    ul(class='socials')
        each item in socials
            li.socials__item
                a(href=`${item[0]}`, class='socials__link' + mod2)
                  +icon(item[1], 'socials__icon socials__icon--' + mod)